<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/imgPets"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            />

        <Button
            android:id="@+id/btnLike"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/bone"
            android:layout_below="@id/imgPets"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roony"
            android:layout_alignBottom="@+id/btnLike"
            android:layout_toRightOf="@+id/btnLike"
            android:layout_toEndOf="@+id/btnLike"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:textSize="@dimen/activity_horizontal_margin"
            android:id="@+id/tvPet" />

        <ImageView
            android:id="@+id/active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/notfavorite"
            android:layout_alignTop="@+id/tvRating"
            android:layout_alignRight="@+id/imgPets"
            android:layout_alignEnd="@+id/imgPets" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/activity_horizontal_margin"
            android:id="@+id/tvRating"
            android:layout_alignBaseline="@+id/tvPet"
            android:layout_alignBottom="@+id/tvPet"
            android:layout_toLeftOf="@+id/active"
            android:layout_toStartOf="@+id/active"
            android:clickable="true"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>